<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
	<!-- Permite tráfico HTTP para tu IP específica -->
	<domain-config cleartextTrafficPermitted="true">
		<domain includeSubdomains="true">147.185.238.132</domain>
	</domain-config>

	<!-- Configuración base que permite cleartext -->
	<base-config cleartextTrafficPermitted="true">
		<trust-anchors>
			<certificates src="system" />
			<certificates src="user" />
		</trust-anchors>
	</base-config>
</network-security-config>
